                android:layout_weight="1"
                android:text="@string/lbl_LED0" />

            <Switch
                android:id="@+id/switch0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:onClick="onToggleClicked"
                android:tag="LED0" />
        </LinearLayout>

